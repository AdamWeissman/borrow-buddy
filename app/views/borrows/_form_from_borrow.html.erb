<%= bootstrap_form_for([current_lender, @borrow], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |borrow_form| %>
  <%= render partial: "partials/form_errors", locals: { object: @borrow } %>

  <%= borrow_form.collection_select :recipient_id, Recipient.form_collection(current_lender), :id, :name, { label: "Select a Borrower from Your List:", prompt: "Select One" } %>
  
  <%= borrow_form.label "Or Create a New Borrower:" %><br>
  <%= borrow_form.fields_for :recipient do |recipient_attributes| %>
    <%= recipient_attributes.text_field :name, label: "Borrower Name:", label_col: "col-sm-2 offset-md-1", control_col: "col-sm-9" %>
    <%= recipient_attributes.text_field :email, label: "Borrower Email:", label_col: "col-sm-2 offset-md-1", control_col: "col-sm-9" %>
    <%= recipient_attributes.text_field :phone, label: "Borrower Phone:", label_col: "col-sm-2 offset-md-1", control_col: "col-sm-9" %>
  <% end %><br>

  <%= borrow_form.collection_select :item_id, Item.form_collection(current_lender), :id, :name_with_category, { label: "Select an Item from Your List:", prompt: "Select One" } %>

  <%= borrow_form.label "Or Create a New Item:" %><br>
  <%= borrow_form.fields_for :item do |item_attributes| %>
    <%= item_attributes.text_field :name, label: "Item Name:", label_col: "col-sm-2 offset-md-1", control_col: "col-sm-9" %>
    <%= item_attributes.text_field :category, label: "Item Category:", label_col: "col-sm-2 offset-md-1", control_col: "col-sm-9" %>
  <% end %><br>

  <%= borrow_form.label "About This Loan" %><br>
  <%= borrow_form.number_field :days_borrowed, label: "Number of Days Borrowed:", label_col: "col-sm-3", control_col: "col-sm-9" %>
  <%= borrow_form.number_field :reminders_sent, label: "Number of Reminders Sent to the Borrower:", label_col: "col-sm-3", control_col: "col-sm-9" %>

  <%= borrow_form.form_group :returned, label: { text: "Has the borrowed item been returned?" } do %>
    <%= borrow_form.radio_button :returned, :true, label: "Yes", inline: true %>
    <%= borrow_form.radio_button :returned, :false, label: "No", inline: true, checked: true %><br>
  <% end %>

  <%= borrow_form.submit %><br><br>
<% end %>

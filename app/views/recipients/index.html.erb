<div class="row">
  <% @title = "Borrow Buddy | All Recipients" %>
  <div class="col text-center">
    <h1>All Recipients</h1>
  </div>
</div>

<div class="media row">
  <div class="media-body col offset-1">
    <p>View all recipient you've added to your app here. Click "Edit" or "Delete" to make changes to the recipient listed on the corresponding row. Click on the name of the recipient to view more information, including all borrows logged to this recipient in your app.</p>
  </div>
  <%= image_tag("bb-color.png", size: "40x40", alt: "Borrow Buddy Logo", class: "col-1") %>
  <div class="col-1">
  </div>
</div>

<div class="table-responsive-sm">
  <table class="table">
    <thead>
      <tr class="row">
        <th scope="col" class="col-3">Name</th>
        <th scope="col" class="col-4">Email</th>
        <th scope="col" class="col-3">Phone</th>
        <th scope="col" class="col-2" colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipients.each do |recipient| %>
        <tr class="row">
          <td class="col-3"><%= link_to recipient.name, lender_recipient_path(current_lender, recipient) %></td>
          <td class="col-4"><%= recipient.email %></td>
          <td class="col-3"><%= recipient.phone %></td>
          <td class="col-1 text-right table-action-link"><%= link_to 'Edit', edit_lender_recipient_path(current_lender, recipient) %></td>
          <td class="col-1 text-right table-action-link"><%= link_to 'Delete', lender_recipient_path(current_lender, recipient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

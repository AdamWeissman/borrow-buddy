<div class="row">
  <% @title = "Borrow Buddy | All Recipients" %>
  <div class="col text-center">
    <h1>All Recipients</h1>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.name %></td>
        <td><%= recipient.email %></td>
        <td><%= recipient.phone %></td>
        <td><%= link_to 'Show', lender_recipient_path(current_lender, recipient) %></td>
        <td><%= link_to 'Edit', edit_lender_recipient_path(current_lender, recipient) %></td>
        <td><%= link_to 'Destroy', lender_recipient_path(current_lender, recipient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for @recipient do |recipient_form| %>
  <%= render partial: "partials/form_errors", locals: { object: @recipient } %>

  <%= recipient_form.label :name %>
  <%= recipient_form.text_field :name %><br>

  <%= recipient_form.label :email %>
  <%= recipient_form.text_field :email %><br>

  <%= recipient_form.label :phone %>
  <%= recipient_form.text_field :phone %><br>

  <%= recipient_form.submit %><br><br>
<% end %>

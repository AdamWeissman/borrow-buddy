<%= form_for ([current_lender, @item]) do |item_form| %>
  <%= render partial: "partials/form_errors", locals: { object: @item } %>

  <%= item_form.label :name %>
  <%= item_form.text_field :name %><br>

  <%= item_form.label :category %>
  <%= item_form.text_field :category %><br>

  <%= item_form.submit %><br><br>
<% end %>

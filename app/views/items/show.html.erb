<h1>Recipient</h1>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @item.category %>
</p>

<br>

<h2>Borrows Info for <%= @item.name %></h2>

<table>
  <thead>
    <tr>
      <th>Recipient</th>
      <th>No. Days Borrowed</th>
      <th>No. Reminders Sent</th>
      <th>Item Returned?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item.borrows.each do |borrow| %>
      <tr>
        <td><%= borrow.recipient.name %></td>
        <td><%= borrow.days_borrowed %></td>
        <td><%= borrow.reminders_sent %></td>
        <td><%= boolean_display(borrow.returned) %></td>
        <td><%= link_to 'Show', lender_borrow_path(current_lender, borrow) %></td>
        <td><%= link_to 'Edit', edit_lender_borrow_path(current_lender, borrow) %></td>
        <td><%= link_to 'Destroy', lender_borrow_path(current_lender, borrow), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Borrow', new_item_borrow_path(@item) %><br>

<%= link_to 'Edit', edit_lender_item_path(current_lender, @item) %>
<%= link_to 'Back', lender_items_path(current_lender) %><br>

<%= link_to 'Home', root_path %>
